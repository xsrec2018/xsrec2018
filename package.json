{
  "name": "retromeet",
  "version": "0.2.0",
  "private": true,
  "author": {
    "name": "XSolve",
    "url": "https://xsolve.software/"
  },
  "scripts": {
    "start:client": "better-npm-run start",
    "build:client": "better-npm-run build",
    "lint:client": "eslint src",
    "test:client": "better-npm-run test",
    "test:coverage-client": "better-npm-run test --coverage --no-cache",
    "start:server": "NODE_ENV=production node --require babel-register --require babel-polyfill $NODE_DEBUG_OPTION './src/server/server.js'",
    "dev:server": "NODE_ENV=development nodemon --inspect=0.0.0.0:9229 --require babel-register --require babel-polyfill $NODE_DEBUG_OPTION './src/server/server.js'",
    "lint:server": "eslint ./app/server",
    "test:server": "cross-env NODE_ENV=test $COVERAGE mocha --require babel-register --require babel-polyfill --exit app/server/**/*.tests.js",
    "test:coverage-server": "cross-env COVERAGE='nyc --all' npm run test",
    "test:all-server": "run-s lint:client test:coverage-client lint:server test:coverage-server"
  },
  "betterScripts": {
    "start": "node src/client/scripts/start.js",
    "build": {
      "command": "node src/client/scripts/build",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "test": {
      "command": "node src/client/scripts/test --env=jsdom",
      "env": {
        "NODE_ENV": "test"
      }
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "setupFiles": [
      "raf/polyfill",
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).js?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "setupTestFrameworkScriptFile": "<rootDir>/src/client/setupTests.js",
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ]
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "nyc": {
    "require": [
      "babel-register",
      "babel-polyfill"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "dependencies": {
    "@types/uuid": "^3.4.3",
    "autoprefixer": "7.1.2",
    "babel-eslint": "7.2.3",
    "babel-jest": "20.0.3",
    "babel-loader": "7.1.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-app": "^3.0.3",
    "babel-preset-stage-1": "^6.24.1",
    "babel-runtime": "6.26.0",
    "better-npm-run": "^0.1.0",
    "case-sensitive-paths-webpack-plugin": "2.1.1",
    "chai": "^4.1.2",
    "chalk": "^1.1.3",
    "classnames": "^2.2.5",
    "css.escape": "^1.5.1",
    "dotenv": "4.0.0",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.2",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-loader": "1.9.0",
    "eslint-plugin-flowtype": "2.35.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "file-loader": "0.11.2",
    "fs-extra": "3.0.1",
    "html-webpack-plugin": "2.29.0",
    "jest": "20.0.4",
    "jest-enzyme": "^4.0.1",
    "lodash": "^4.17.4",
    "material-ui": "^1.0.0-beta.25",
    "material-ui-icons": "^1.0.0-beta.17",
    "mongoose": "^5.0.5",
    "object-assign": "4.1.1",
    "promise": "8.0.1",
    "prop-types": "^15.6.0",
    "query-string": "^5.0.1",
    "react": "^16.0.0",
    "react-dev-utils": "^4.1.0",
    "react-dom": "^16.0.0",
    "react-intl": "^2.4.0",
    "react-redux": "^5.0.6",
    "react-onclickoutside": "^6.7.1",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^4.0.8",
    "redux": "^3.7.2",
    "redux-form": "^7.2.0",
    "redux-form-material-ui": "^5.0.0-beta.2",
    "redux-logger": "^3.0.6",
    "redux-mock-store": "^1.3.0",
    "redux-thunk": "^2.2.0",
    "reselect": "^3.0.1",
    "serve": "^6.4.11",
    "socket.io": "^2.0.4",
    "socket.io-client": "^2.0.4",
    "source-map-support": "^0.5.3",
    "sw-precache-webpack-plugin": "0.11.4",
    "url-loader": "0.5.9",
    "uuid": "^3.2.1",
    "webpack": "3.5.1",
    "webpack-dev-server": "2.8.2",
    "webpack-manifest-plugin": "1.2.1",
    "whatwg-fetch": "2.0.3"
  },
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/lodash": "^4.14.102",
    "@types/mocha": "^2.2.48",
    "@types/mongoose": "^5.0.2",
    "@types/prop-types": "^15.5.2",
    "@types/react": "^16.0.25",
    "@types/react-router": "^4.0.17",
    "@types/react-router-dom": "^4.2.1",
    "@types/socket.io": "^1.4.31",
    "@types/socket.io-client": "^1.4.31",
    "babel-core": "^6.25.0",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-plugin-stack-trace-sourcemap": "^1.0.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-stage-2": "^6.24.1",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.9",
    "eslint": "^4.17.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "mocha": "^5.0.1",
    "nodemon": "^1.14.12",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.4.1",
    "postcss-loader": "^2.1.0",
    "raf": "^3.4.0",
    "style-loader": "^0.20.1"
  }
}
